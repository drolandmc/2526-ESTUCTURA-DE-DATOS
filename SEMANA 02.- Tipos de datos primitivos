using System;

namespace FigurasGeometricas
{
    // Clase para representar un Círculo
    public class Circulo
    {
        // Radio es un atributo privado que representa la distancia desde el centro del círculo hasta cualquier punto de su circunferencia
        private double radio;

        // Constructor de la clase Circulo que recibe como parámetro el radio del círculo
        public Circulo(double radio)
        {
            // Validamos que el radio sea un valor positivo
            if (radio <= 0)
            {
                throw new ArgumentException("El radio debe ser un valor positivo mayor que cero.");
            }
            this.radio = radio;
        }

        // Propiedad Radio permite acceder y modificar el radio del círculo con validación
        public double Radio
        {
            get { return radio; }
            set
            {
                if (value <= 0)
                {
                    throw new ArgumentException("El radio debe ser un valor positivo mayor que cero.");
                }
                radio = value;
            }
        }

        // CalcularArea es un método que devuelve un valor double, se utiliza para calcular el área de un círculo
        // El área de un círculo se calcula como π multiplicado por el radio al cuadrado (π * r²)
        public double CalcularArea()
        {
            return Math.PI * radio * radio;
        }

        // CalcularPerimetro es un método que devuelve un valor double, se utiliza para calcular el perímetro (circunferencia) de un círculo
        // El perímetro de un círculo se calcula como 2 multiplicado por π multiplicado por el radio (2 * π * r)
        public double CalcularPerimetro()
        {
            return 2 * Math.PI * radio;
        }

        // ToString es un método que sobrescribe el comportamiento predeterminado para mostrar información del círculo
        public override string ToString()
        {
            return $"Círculo - Radio: {radio:F2}, Área: {CalcularArea():F2}, Perímetro: {CalcularPerimetro():F2}";
        }
    }

    // Clase para representar un Rectángulo
    public class Rectangulo
    {
        // Base es un atributo privado que representa la longitud de la base del rectángulo
        private double baseRectangulo;
        
        // Altura es un atributo privado que representa la longitud de la altura del rectángulo
        private double altura;

        // Constructor de la clase Rectangulo que recibe como parámetros la base y la altura del rectángulo
        public Rectangulo(double baseRectangulo, double altura)
        {
            // Validamos que tanto la base como la altura sean valores positivos
            if (baseRectangulo <= 0 || altura <= 0)
            {
                throw new ArgumentException("Tanto la base como la altura deben ser valores positivos mayores que cero.");
            }
            this.baseRectangulo = baseRectangulo;
            this.altura = altura;
        }

        // Propiedad BaseRectangulo permite acceder y modificar la base del rectángulo con validación
        public double BaseRectangulo
        {
            get { return baseRectangulo; }
            set
            {
                if (value <= 0)
                {
                    throw new ArgumentException("La base debe ser un valor positivo mayor que cero.");
                }
                baseRectangulo = value;
            }
        }

        // Propiedad Altura permite acceder y modificar la altura del rectángulo con validación
        public double Altura
        {
            get { return altura; }
            set
            {
                if (value <= 0)
                {
                    throw new ArgumentException("La altura debe ser un valor positivo mayor que cero.");
                }
                altura = value;
            }
        }

        // CalcularArea es un método que devuelve un valor double, se utiliza para calcular el área de un rectángulo
        // El área de un rectángulo se calcula multiplicando la base por la altura (base * altura)
        public double CalcularArea()
        {
            return baseRectangulo * altura;
        }

        // CalcularPerimetro es un método que devuelve un valor double, se utiliza para calcular el perímetro de un rectángulo
        // El perímetro de un rectángulo se calcula sumando dos veces la base y dos veces la altura (2 * base + 2 * altura)
        public double CalcularPerimetro()
        {
            return 2 * (baseRectangulo + altura);
        }

        // ToString es un método que sobrescribe el comportamiento predeterminado para mostrar información del rectángulo
        public override string ToString()
        {
            return $"Rectángulo - Base: {baseRectangulo:F2}, Altura: {altura:F2}, Área: {CalcularArea():F2}, Perímetro: {CalcularPerimetro():F2}";
        }
    }

    // Programa principal para demostrar el uso de las clases
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("=== DEMOSTRACIÓN DE FIGURAS GEOMÉTRICAS ===\n");

            try
            {
                // Crear y mostrar información de un círculo
                Console.WriteLine("1. CÍRCULO");
                Circulo miCirculo = new Circulo(5.0);
                Console.WriteLine($"   Radio del círculo: {miCirculo.Radio:F2}");
                Console.WriteLine($"   Área del círculo: {miCirculo.CalcularArea():F2}");
                Console.WriteLine($"   Perímetro del círculo: {miCirculo.CalcularPerimetro():F2}");
                Console.WriteLine($"   Representación completa: {miCirculo}\n");

                // Crear y mostrar información de un rectángulo
                Console.WriteLine("2. RECTÁNGULO");
                Rectangulo miRectangulo = new Rectangulo(4.0, 6.0);
                Console.WriteLine($"   Base del rectángulo: {miRectangulo.BaseRectangulo:F2}");
                Console.WriteLine($"   Altura del rectángulo: {miRectangulo.Altura:F2}");
                Console.WriteLine($"   Área del rectángulo: {miRectangulo.CalcularArea():F2}");
                Console.WriteLine($"   Perímetro del rectángulo: {miRectangulo.CalcularPerimetro():F2}");
                Console.WriteLine($"   Representación completa: {miRectangulo}\n");

                // Demostración de modificación de propiedades
                Console.WriteLine("3. MODIFICACIÓN DE PROPIEDADES");
                miCirculo.Radio = 7.5;
                Console.WriteLine($"   Nuevo radio del círculo: {miCirculo.Radio:F2}");
                Console.WriteLine($"   Nuevo área del círculo: {miCirculo.CalcularArea():F2}\n");

                miRectangulo.BaseRectangulo = 8.0;
                miRectangulo.Altura = 3.0;
                Console.WriteLine($"   Nueva base del rectángulo: {miRectangulo.BaseRectangulo:F2}");
                Console.WriteLine($"   Nueva altura del rectángulo: {miRectangulo.Altura:F2}");
                Console.WriteLine($"   Nuevo área del rectángulo: {miRectangulo.CalcularArea():F2}");

                // Demostración de validación (esto lanzaría una excepción si se descomenta)
                // Console.WriteLine("\n4. VALIDACIÓN DE DATOS (esto lanzará una excepción)");
                // Rectangulo rectanguloInvalido = new Rectangulo(-5, 10);
            }
            catch (ArgumentException ex)
            {
                Console.WriteLine($"\nERROR: {ex.Message}");
            }
            
            Console.WriteLine("\n=== FIN DE LA DEMOSTRACIÓN ===");
            Console.ReadKey();
        }
    }
}